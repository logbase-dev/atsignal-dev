rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Pages collection
    match /pages/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Menus collection
    match /menus/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}

